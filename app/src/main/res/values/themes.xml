<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. (Light Mode) -->
    <style name="Theme.AnimoCalendar" parent="Theme.Material3.Light">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/light_accent</item>
        <item name="colorPrimaryVariant">@color/light_accent_variant
        </item> <!-- Color used on system bar -->
        <item name="colorOnPrimary">@color/light_txt</item>

        <!-- Background color -->
        <item name="android:colorBackground">@color/light_bg</item>
        <item name="colorOnBackground">@color/light_accent_txt
        </item> <!-- Color used on navbar (on the side) -->
        <item name="colorCalendarText">@color/black</item> <!-- Color used on calendar text -->
        <item name="colorCalendarOutline">@color/light_outline
        </item> <!-- Color used for calendar outline -->

        <!-- System bar color (bar with time, battery, etc.) -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/inter</item>

        <!-- Important: Prevents crashing -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!-- Other default styles -->
    <style name="Theme.AnimoCalendar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AnimoCalendar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AnimoCalendar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Halloween Theme -->
    <style name="Halloween" parent="Theme.Material3.Light">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/hw_accent</item>
        <item name="colorPrimaryVariant">@color/hw_accent_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Background color -->
        <item name="android:colorBackground">@color/hw_bg</item>
        <item name="colorOnBackground">@color/hw_accent_txt</item> <!-- TODO -->
        <item name="colorCalendarText">@color/white</item>
        <item name="colorCalendarOutline">@color/hw_outline</item>
    </style>

    <!-- Valentines Theme -->
    <style name="Valentines" parent="Theme.Material3.Light">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/val_accent</item>
        <item name="colorPrimaryVariant">@color/val_accent_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Background color -->
        <item name="android:colorBackground">@color/val_bg</item>
        <item name="colorOnBackground">@color/val_accent</item> <!-- TODO -->
        <item name="colorCalendarText">@color/white</item>
        <item name="colorCalendarOutline">@color/val_outline</item>
    </style>

    <!-- Christmas Theme -->
    <style name="Christmas" parent="Theme.Material3.Light">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/xmas_accent</item>
        <item name="colorPrimaryVariant">@color/xmas_accent_variant</item>
        <item name="colorOnPrimary">@color/white</item> <!-- TODO -->

        <!-- Background color -->
        <item name="android:colorBackground">@color/xmas_bg</item>
        <item name="colorOnBackground">@color/xmas_accent</item> <!-- TODO -->
        <item name="colorCalendarText">@color/white</item>
        <item name="colorCalendarOutline">@color/xmas_outline</item>
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.AnimoCalendar" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
</resources>