<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewTaskActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<!--        <Button-->
<!--            android:id="@+id/dispTaskColor"-->
<!--            android:layout_width="49dp"-->
<!--            android:layout_height="41dp"-->
<!--            android:layout_marginStart="40dp"-->
<!--            android:layout_marginTop="40dp"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent" />-->

        <ImageButton
            android:id="@+id/dispTaskColor"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/baseline_square_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/dispTaskName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="44dp"
                android:fontFamily="@font/inter_bold"
                android:text="MCO3 Deadline"
                android:textColor="?attr/colorCalendarText"
                android:textSize="22sp"
                app:layout_constraintStart_toEndOf="@+id/dispTaskColor"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dispFinText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:text="Finish By:"
            android:textColor="?attr/colorOutline"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dispTaskColor" />

        <EditText
            android:id="@+id/dispDateToFinish"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="40dp"
            android:ems="10"
            android:inputType="date"
            android:textColor="?attr/colorCalendarText"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/dispFinText"
            app:layout_constraintTop_toBottomOf="@+id/dispTaskColor"
            android:backgroundTint="?attr/colorPrimary" />

        <TextView
            android:id="@+id/dispCreateText"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:text="Created By"
            android:textColor="?attr/colorCalendarText"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dispDateToFinish" />

        <ImageView
            android:id="@+id/dispCreatePfp"
            android:layout_width="51dp"
            android:layout_height="53dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dispCreateText"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/dispCreateName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="22dp"
            android:text="Juan Dela Cruz"
            android:textColor="?attr/colorCalendarText"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/dispCreatePfp"
            app:layout_constraintTop_toBottomOf="@+id/dispCreateText" />

        <TextView
            android:id="@+id/dispDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="27dp"
            android:text="Task Description"
            android:textColor="?attr/colorCalendarText"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dispCreatePfp" />

        <TextView
            android:id="@+id/dispDescContent"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="40dp"
            android:text="All functions in the MP must be implemented here!"
            android:textColor="?attr/colorCalendarText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dispDesc" />

        <TextView
            android:id="@+id/dispPrio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:text="Priority"
            android:textColor="?attr/colorCalendarText"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dispDescContent" />

        <Button
            android:id="@+id/dispPrioAnswer"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_marginStart="68dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="?attr/android:colorBackground"
            android:clickable="true"
            android:fontFamily="@font/inter_medium"
            android:minWidth="0dp"
            android:stateListAnimator="@null"
            android:text="URGENT"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnBackground"
            android:textSize="12sp"
            app:cornerRadius="20dp"
            app:layout_constraintStart_toEndOf="@+id/dispPrio"
            app:layout_constraintTop_toBottomOf="@+id/dispDescContent"
            app:strokeColor="?attr/colorOnBackground"
            app:strokeWidth="2dp" />

        <TextView
            android:id="@+id/dispCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="25dp"
            android:text="Category"
            android:textColor="?attr/colorCalendarText"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dispPrio" />

        <Button
            android:id="@+id/dispCatAnswer"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="?attr/android:colorBackground"
            android:clickable="false"
            android:fontFamily="@font/inter_medium"
            android:minWidth="0dp"
            android:stateListAnimator="@null"
            android:text="Academic"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnBackground"
            android:textSize="12sp"
            app:cornerRadius="20dp"
            app:layout_constraintStart_toEndOf="@+id/dispCat"
            app:layout_constraintTop_toBottomOf="@+id/dispPrioAnswer"
            app:strokeColor="?attr/colorOnBackground"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/dispEdt"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_marginStart="153dp"
            android:layout_marginEnd="153dp"
            android:layout_marginBottom="45dp"
            android:backgroundTint="?attr/colorPrimary"
            android:stateListAnimator="@null"
            android:text="EDIT"
            app:cornerRadius="7dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>