<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateThemeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/inputThemeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:backgroundTint="@color/light_accent"
            android:ems="10"
            android:hint="Theme Name"
            android:inputType="text"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/prevBgColor"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="?attr/colorCalendarOutline"
            android:stateListAnimator="@null"
            app:cornerRadius="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/styleHeader" />

        <ImageButton
            android:id="@+id/btnBgColor"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/baseline_colorize_24"
            app:layout_constraintStart_toEndOf="@+id/prevBgColor"
            app:layout_constraintTop_toBottomOf="@+id/styleHeader"
            app:tint="?attr/colorCalendarOutline" />

        <Button
            android:id="@+id/prevAccentColor"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="7dp"
            android:backgroundTint="?attr/colorCalendarOutline"
            android:stateListAnimator="@null"
            app:cornerRadius="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/prevBgColor" />

        <ImageButton
            android:id="@+id/btnAccentColor"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="9dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/baseline_colorize_24"
            app:layout_constraintStart_toEndOf="@+id/prevAccentColor"
            app:layout_constraintTop_toBottomOf="@+id/btnBgColor"
            app:tint="?attr/colorCalendarOutline" />

        <Button
            android:id="@+id/prevHlightColor"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="7dp"
            android:backgroundTint="?attr/colorCalendarOutline"
            android:stateListAnimator="@null"
            app:cornerRadius="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/prevAccentColor" />

        <ImageButton
            android:id="@+id/btnHlightColor"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="9dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/baseline_colorize_24"
            app:layout_constraintStart_toEndOf="@+id/prevOutlineColor"
            app:layout_constraintTop_toBottomOf="@+id/btnAccentColor"
            app:tint="?attr/colorCalendarOutline" />

        <Button
            android:id="@+id/prevOutlineColor"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="7dp"
            android:backgroundTint="?attr/colorCalendarOutline"
            android:stateListAnimator="@null"
            app:cornerRadius="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/prevHlightColor" />

        <ImageButton
            android:id="@+id/btnOutlineColor"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="9dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/baseline_colorize_24"
            app:layout_constraintStart_toEndOf="@+id/prevHlightColor"
            app:layout_constraintTop_toBottomOf="@+id/btnHlightColor"
            app:tint="?attr/colorCalendarOutline" />

        <Button
            android:id="@+id/prevMainText"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="?attr/colorCalendarOutline"
            android:stateListAnimator="@null"
            app:cornerRadius="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_text_header" />

        <ImageButton
            android:id="@+id/btnMainText"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/baseline_colorize_24"
            app:layout_constraintStart_toEndOf="@+id/prevMainText"
            app:layout_constraintTop_toBottomOf="@+id/tv_text_header"
            app:tint="?attr/colorCalendarOutline" />

        <Button
            android:id="@+id/prevHlightText"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="7dp"
            android:backgroundTint="?attr/colorCalendarOutline"
            android:stateListAnimator="@null"
            app:cornerRadius="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/prevMainText" />

        <ImageButton
            android:id="@+id/btnHlightText"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="9dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/baseline_colorize_24"
            app:layout_constraintStart_toEndOf="@+id/prevHlightText"
            app:layout_constraintTop_toBottomOf="@+id/btnMainText"
            app:tint="?attr/colorCalendarOutline" />

        <TextView
            android:id="@+id/styleHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/inter_bold"
            android:text="CALENDAR STYLE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputThemeName" />

        <View
            android:id="@+id/styleHl"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="#848282"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/styleHeader" />

        <TextView
            android:id="@+id/tv_bg_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:text="Background Color"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/styleHeader" />

        <TextView
            android:id="@+id/tv_accent_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:text="Accent Color"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_bg_color" />

        <TextView
            android:id="@+id/tv_hlight_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:text="Highlight Color"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_accent_color" />

        <TextView
            android:id="@+id/tv_outline_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:text="Outline Color"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_hlight_color" />

        <TextView
            android:id="@+id/tv_text_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/inter_bold"
            android:text="TEXT COLOR"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_outline_color" />

        <View
            android:id="@+id/hl_text_header"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="#848282"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_text_header" />

        <TextView
            android:id="@+id/tv_main_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:text="Main Text Color"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_text_header" />

        <TextView
            android:id="@+id/tv_hlight_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:text="Highlight Text Color"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_main_text_color" />

        <Button
            android:id="@+id/createThemeCancel"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="65dp"
            android:backgroundTint="@color/light_outline"
            android:stateListAnimator="@null"
            android:text="CANCEL"
            app:cornerRadius="7dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_hlight_text_color" />

        <Button
            android:id="@+id/createThemeSave"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="75dp"
            android:backgroundTint="@color/light_accent"
            android:stateListAnimator="@null"
            android:text="SAVE"
            app:cornerRadius="7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_hlight_text_color" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>